@model Comment
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>   
    <div class="main-panel">
        <div class="content-wrapper" style="margin:10px">
            <div class="d-flex justify-content-between" style="margin:20px">
                <div>
                    <h1>Write Comment</h1>
                </div>
                <div style="margin-right:10px; display:flex; justify-content:center; align-items:center">
                    <a class="btn btn-danger" asp-area="default" asp-controller="Login" asp-action="Logout">Logout</a>
                </div>
            </div>
            <form asp-controller="Comment" asp-action="CreateComment" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="form-label">Select category</label>
                        <select class="form-control" name="BlogId">
                            @foreach (Blog blog in ViewBag.Blogs)
                            {
                                <option value="@blog.Id">@blog.Title</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Title" for="exampleInputName1">Title</label>
                        <input asp-for="@Model.Title" type="text" class="form-control" placeholder="Title">
                        <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Content"></label>
                        <input accept="image/*" asp-for="@Model.Content" class="form-control" placeholder="Content">
                        <span class="text-danger" asp-validation-for="@Model.Content"></span>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}