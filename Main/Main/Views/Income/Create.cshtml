@model Income
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Create Income</h4>

                            <form class="forms-sample" method="post">

                                <div class="form-group">
                                    <label asp-for="@Model.Money">Amountm of the income</label>
                                    <input asp-for="@Model.Money" class="form-control" style="color:white">
                                    <span asp-validation-for="@Model.Money" class="text-danger">  </span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.Description">About the income</label>
                                    <input asp-for="@Model.Description" class="form-control" style="color:white">
                                    <span asp-validation-for="@Model.Description" class="text-danger">  </span>
                                </div>

                                <button type="submit" class="btn btn-primary mr-2">Create</button>
                                <a asp-action="Index" class="btn btn-light">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}

